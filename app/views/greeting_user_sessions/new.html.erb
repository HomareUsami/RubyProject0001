<h1>ログイン</h1>
<% if alert %>
  <p style="color: red;"><%= alert %></p>
<% end %>
<% if notice %>
  <p style="color: green;"><%= notice %></p>
<% end %>
<%= form_with url: login_path,local: true do |f| %>
  <%= f.text_field :user_id, placeholder: "ユーザーID" %>
  <%= f.password_field :password, placeholder: "パスワード" %>
  <%= f.submit "ログイン" %>
<% end %>

