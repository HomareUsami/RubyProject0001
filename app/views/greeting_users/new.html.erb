<h1>新規ユーザー登録</h1>
<% if @user.errors.any? %>
  <div style="color: red">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user,local: true do |f| %>
	<%= f.text_field :user_id, placeholder: "ユーザーID" %>
	<%= f.text_field :name, placeholder: "名前" %>
	<%= f.password_field :password, placeholder: "パスワード" %>
	<%= f.password_field :password_confirmation, placeholder: "パスワード確認" %>
	<%= f.submit "登録" %>
<% end %>