<%= form_with(model: greeting) do |form| %>
  <% if greeting.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(greeting.errors.count, "error") %> prohibited this greeting from being saved:</h2>

      <ul>
        <% greeting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!--旧実装 名前手入力パターン-->
  <% unless @current_user %>
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>
  <% else %>
    <div>
      <%= form.label :name, value: @current_user.name %>
    </div>
  <% end %>
  <!--
  <div>
    <%#= form.label :name, style: "display: block" %>
    <%#= form.text_field :name %>
  </div>
  -->

  <div>
    <%= form.label :message, style: "display: block" %>
    <%= form.textarea :message %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
